<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="codeButton">
        <item name="android:background">#53e2c3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:layout_marginRight">67dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">19dp</item>
    </style>

    <style name="codeTextView">
        <item name="android:background">#53e2c3</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:layout_marginRight">67dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">19dp</item>
    </style>

    <style name="codeImageView">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">256dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">67dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>